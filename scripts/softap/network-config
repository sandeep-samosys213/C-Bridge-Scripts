# C-Bridge Network Configuration for SoftAP Provisioning
#
# FIRST BOOT NETWORK CONFIG
# wlan0 gets static IP for SoftAP mode
# After WiFi setup, device switches to client mode

network:
  version: 2
  renderer: networkd

  ethernets:
    eth0:
      dhcp4: true
      optional: true

  # wlan0 - Static IP for SoftAP mode
  # This IP is used by hostapd/dnsmasq for SoftAP
  wifis:
    wlan0:
      dhcp4: false
      addresses:
        - 192.168.4.1/24
      optional: true
      # NO SSID/password here - configured via provisioning portal
